{
  "name": "wapro",
  "productName": "Wapro",
  "private": true,
  "version": "1.3.1",
  "description": "Wapro - Smart Marketing . Safe Sending",
  "author": "BINODNAYAK806",
  "main": "dist-electron/electron/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "tsc -b tsconfig.renderer.json && vite build",
    "build:electron": "tsc -b tsconfig.electron.json && tsc -b tsconfig.preload.json && node -e \"const fs=require('fs');const p='dist-electron/electron/preload';if(fs.existsSync(p+'/index.js')){fs.renameSync(p+'/index.js',p+'/index.cjs');fs.existsSync(p+'/index.js.map')&&fs.renameSync(p+'/index.js.map',p+'/index.cjs.map')}\" && node -e \"const fs=require('fs');const path=require('path');const src='electron/worker/SafeWorker.wrapper.cjs';const dest='dist-electron/electron/worker/SafeWorker.wrapper.cjs';fs.mkdirSync(path.dirname(dest),{recursive:true});fs.copyFileSync(src,dest);console.log('Copied SafeWorker.wrapper.cjs to dist-electron');\"",
    "electron:prod": "npm run build && cross-env NODE_ENV=production electron .",
    "dist": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder",
    "dist:win": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --win",
    "dist:mac": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --mac",
    "dist:linux": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --linux",
    "build:production": "node scripts/build-production.cjs",
    "publish:win": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --win --publish always",
    "publish:mac": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --mac -p always",
    "publish:linux": "npm run prebuild:dist && cross-env NODE_ENV=production npm run build && electron-builder --linux -p always",
    "prebuild:dist": "npm run clean",
    "clean": "node scripts/clean.cjs",
    "verify": "node scripts/verify-build.cjs",
    "verify:structure": "node scripts/verify-structure.cjs",
    "preview": "vite preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.renderer.json && tsc --noEmit -p tsconfig.electron.json && tsc --noEmit -p tsconfig.preload.json"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@supabase/supabase-js": "^2.58.0",
    "@types/better-sqlite3": "^7.6.13",
    "@whiskeysockets/baileys": "^6.7.21",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "embla-carousel-react": "^8.3.0",
    "extract-zip": "^2.0.1",
    "fd-slicer": "^1.1.0",
    "framer-motion": "^12.23.26",
    "input-otp": "^1.2.4",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.446.0",
    "mime-types": "^3.0.2",
    "next-themes": "^0.3.0",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "papaparse": "^5.5.3",
    "pino": "^8.21.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^7.10.1",
    "recharts": "^2.12.7",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "undici": "^7.16.0",
    "vaul": "^1.0.0",
    "xlsx": "^0.18.5",
    "yauzl": "^2.10.0",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "com.wapro.whatsapp",
    "productName": "Wapro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!dist-electron/chromium",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-electron/chromium",
        "to": "chromium",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "dist-electron/electron/worker/**/*",
      "node_modules/puppeteer*/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "BINODNAYAK806",
        "repo": "sambad-releases",
        "private": false
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.11.1",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.7.3",
    "@types/node-fetch": "^2.6.13",
    "@types/papaparse": "^5.5.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^32.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  }
}